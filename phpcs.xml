<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>The coding standard for phpelo.</description>

    <file>entrypoint.php</file>
    <file>examples</file>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="p"/>

    <!-- Use the PSR12 Standard-->
    <rule ref="PSR12"/>

    <!-- Exclude SideEffects for entrypoint and examples because they are scripts -->
    <rule ref="PSR1.Files.SideEffects">
        <exclude-pattern>entrypoint.php</exclude-pattern>
        <exclude-pattern>examples/*</exclude-pattern>
    </rule>

    <!-- Exclude LineLength for entrypoint because of base64 strings -->
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>entrypoint.php</exclude-pattern>
    </rule>

</ruleset>
