<?xml version="1.0"?>
<ruleset name="PHPelo">
    <description>The coding standard for PHPelo.</description>

    <file>entrypoint.php</file>
    <file>examples</file>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg value="p"/>

    <!-- Include the whole PSR12 standard -->
    <rule ref="PSR12"/>

    <!-- Disable SideEffects rule for scripts -->
    <rule ref="PSR1.Files.SideEffects">
        <exclude-pattern>entrypoint.php</exclude-pattern>
        <exclude-pattern>examples/*.php</exclude-pattern>
    </rule>

    <!-- Allow long lines -->
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>entrypoint.php</exclude-pattern>
    </rule>

</ruleset>
